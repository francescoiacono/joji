{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "_concurrently": "concurrently -n \"CLIENT,SERVER\" -c \"bgBlack.bold,bgMagenta.bold\"",
    "client": "npm run dev --workspace=packages/frontend",
    "server": "npm run dev:no-sandbox --workspace=packages/backend",
    "dev": "npm run _concurrently -- \"npm run client\" \"npm run server\"",
    "prepare": "husky install",
    "build:types": "tsc -p packages/types"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "husky": "^8.0.3"
  },
  "dependencies": {
    "@linaria/babel-preset": "^4.5.4",
    "@linaria/core": "^4.5.4",
    "@linaria/react": "^4.5.4",
    "next-with-linaria": "^0.5.1"
  }
}
